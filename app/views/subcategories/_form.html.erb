<%= form_with model: subcategory do |form| %>
    
    <div class="form-group">
      <%= form.label :name %> <br>
      <%= form.text_field :name %>
    </div>

    <div class="form-group">
    <%= form.label :category_id %> <br>
    <%= form.select :category_id, options_from_collection_for_select(@categories, :id, :name)%>
  </div>
  
  
    <div class="form-group">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  <% end %>